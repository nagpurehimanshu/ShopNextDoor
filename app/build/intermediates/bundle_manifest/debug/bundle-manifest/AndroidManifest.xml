<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopnextdoor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- Required by older versions of Google Play services to create IID tokens -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.shopnextdoor.LoginAndRegister.Login" />
        <activity android:name="com.example.shopnextdoor.Shop.AccountDetailsShop" />
        <activity android:name="com.example.shopnextdoor.Customer.AccountDetailsCustomer" />
        <activity android:name="com.example.shopnextdoor.Customer.PastOrdersCustomer" />
        <activity android:name="com.example.shopnextdoor.Shop.ViewPastOrdersShop" />
        <activity android:name="com.example.shopnextdoor.Shop.NewOrderRequests" />
        <activity android:name="com.example.shopnextdoor.Shop.ShopPendingOrders" />
        <activity android:name="com.example.shopnextdoor.NavigationBar.HomeCustomerNavigation" />
        <activity android:name="com.example.shopnextdoor.Customer.ViewActiveOrders" />
        <activity android:name="com.example.shopnextdoor.Customer.OrderPlaced" />
        <activity android:name="com.example.shopnextdoor.Customer.HomeCustomer" />
        <activity android:name="com.example.shopnextdoor.LoginAndRegister.VerificationPending" />
        <activity android:name="com.example.shopnextdoor.Shop.HomeShop" />
        <activity android:name="com.example.shopnextdoor.LoginAndRegister.ShopRegister" />
        <activity android:name="com.example.shopnextdoor.LoginAndRegister.ShopLogin" />
        <activity android:name="com.example.shopnextdoor.LoginAndRegister.Register" />
        <activity android:name="com.example.shopnextdoor.Customer.PlaceOrder" />
        <activity android:name="com.example.shopnextdoor.LoginAndRegister.WelcomePage" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
             FirebaseMessagingService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.messaging.FirebaseMessagingService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.google.firebase.components.ComponentDiscoveryService"
            android:exported="false" >
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.iid.Registrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
        </service>

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </receiver>
        <!--
             FirebaseInstanceIdService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.iid.FirebaseInstanceIdService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.example.shopnextdoor.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="android.arch.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.shopnextdoor.lifecycle-trojan"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>